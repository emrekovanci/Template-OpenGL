{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 26,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "confs-common",
            "description": "General settings that apply to all configurations",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_CXX_EXTENSIONS": "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "confs-windows-common",
            "description": "Windows settings for MSBuild toolchain that apply to MSCV and Clang",
            "hidden": true,
            "inherits": "confs-common",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset":{
                "value": "host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "confs-windows-msvc-common",
            "description": "Note that all the flags after /W4 are required for MSVC to conform to the language standard",
            "hidden": true,
            "inherits": "confs-windows-common",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_CXX_FLAGS": "/external:anglebrackets /sdl /guard:cf /utf-8 /diagnostics:caret /w14165 /w44242 /w44254 /w44263 /w34265 /w34287 /w44296 /w44388 /w44464 /w14545 /w14546 /w14547 /w14549 /w14555 /w34619 /w34640 /w24826 /w14905 /w14906 /w14928 /w45038 /W4 /permissive- /volatile:iso /Zc:inline /Zc:preprocessor /Zc:enumTypes /Zc:lambda /Zc:__cplusplus /Zc:externConstexpr /Zc:throwingNew /EHsc",
                "CMAKE_EXE_LINKER_FLAGS": "/machine:x64 /guard:cf"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-msvc-x64",
                    "enableMicrosoftCodeAnalysis": true,
                    "codeAnalysisRuleset": "CppCoreCheckRules.ruleset",
                    "disableExternalAnalysis": true
                }
            }
        },
        {
            "name": "confs-windows-llvm-common",
            "hidden": true,
            "inherits": "confs-windows-common",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang-cl"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-clang-x64",
                    "enableMicrosoftCodeAnalysis": true,
                    "codeAnalysisRuleset": "CppCoreCheckRules.ruleset",
                    "disableExternalAnalysis": true
                }
            }
        },
        {
            "name": "confs-linux-common",
            "description": "Linux settings for GCC and Clang toolchains",
            "hidden": true,
            "inherits": "confs-common",
            "condition": {
                "type": "notEquals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "confs-linux-llvm-common",
            "hidden": true,
            "inherits": "confs-linux-common",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "confs-linux-gcc-common",
            "hidden": true,
            "inherits": "confs-linux-common",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "clang-tidy",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_CLANG_TIDY": "clang-tidy"
            }
        },
        {
            "name": "Windows-msvc-Debug",
            "inherits": "confs-windows-msvc-common",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Windows-msvc-Release",
            "inherits": "confs-windows-msvc-common",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "Windows-llvm-Debug",
            "inherits": "confs-windows-llvm-common",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Windows-llvm-Release",
            "inherits": "confs-windows-llvm-common",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "Linux-llvm-Debug",
            "inherits": "confs-linux-llvm-common",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Linux-llvm-Release",
            "inherits": "confs-linux-llvm-common",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "Linux-gcc-Debug",
            "inherits": "confs-linux-gcc-common",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Linux-gcc-Release",
            "inherits": "confs-linux-gcc-common",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "macOS-llvm-Debug",
            "inherits": "confs-linux-llvm-common",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "macOS-llvm-Release",
            "inherits": "confs-linux-llvm-common",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "macOS-gcc-Debug",
            "inherits": "confs-linux-gcc-common",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "macOS-gcc-Release",
            "inherits": "confs-linux-gcc-common",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Windows-msvc-Debug",
            "configurePreset": "Windows-msvc-Debug"
        },
        {
            "name": "Windows-msvc-Release",
            "configurePreset": "Windows-msvc-Release"
        },
        {
            "name": "Windows-llvm-Debug",
            "configurePreset": "Windows-llvm-Debug"
        },
        {
            "name": "Windows-llvm-Release",
            "configurePreset": "Windows-llvm-Release"
        },
        {
            "name": "Linux-llvm-Debug",
            "configurePreset": "Linux-llvm-Debug"
        },
        {
            "name": "Linux-llvm-Release",
            "configurePreset": "Linux-llvm-Release"
        },
        {
            "name": "Linux-gcc-Debug",
            "configurePreset": "Linux-gcc-Debug"
        },
        {
            "name": "Linux-gcc-Release",
            "configurePreset": "Linux-gcc-Release"
        },
        {
            "name": "macOS-llvm-Debug",
            "configurePreset": "macOS-llvm-Debug"
        },
        {
            "name": "macOS-llvm-Release",
            "configurePreset": "macOS-llvm-Release"
        },
        {
            "name": "macOS-gcc-Debug",
            "configurePreset": "macOS-gcc-Debug"
        },
        {
            "name": "macOS-gcc-Release",
            "configurePreset": "macOS-gcc-Release"
        }
    ]
}
